{
	"root": true,
	"extends": [
		"wikimedia/server"
	],
	"rules": {
		"camelcase": "off",
		"no-underscore-dangle": "off",
		"max-statements-per-line": [ "error", { "max": 2 } ],
		"jsdoc/no-undefined-types": "off"
	},
	"overrides": [
		{
			"files": [ "**/*.json", "**/*.jsonc" ],
			"extends": "wikimedia/json"
		}
	]
}
